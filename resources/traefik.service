[Unit]
Description=Traefik service
After=syslog.target network.target

[Service]
Type=notify
User=traefik
Group=traefik
AmbientCapabilities=CAP_NET_BIND_SERVICE
ExecStart=/opt/traefik/traefik --configFile=/data/traefik/config/traefik.yml
TimeoutStartSec=10
Restart=on-abort

[Install]
WantedBy=multi-user.target